package blahBlah;
import java.io.File;
import org.apache.commons.lang3.builder.ReflectionToStringBuilder;
import org.apache.commons.lang3.builder.ToStringStyle;
import com.fasterxml.jackson.databind.ObjectMapper;
import com.fasterxml.jackson.dataformat.yaml.YAMLFactory;

public class Tester {

	public static void main(String[] args) {
		
		System.out.println("This is working now");
		Timer t = new Timer("cat", 60, 30, 5);
		t.printTimerInfo();
		System.out.println();
		
		ObjectMapper mapper = new ObjectMapper(new YAMLFactory());
        try {
            Timer timer = mapper.readValue(new File("timer.yaml"), Timer.class);
            timer.printTimerInfo();
            //System.out.println(ReflectionToStringBuilder.toString(timer,ToStringStyle.MULTI_LINE_STYLE));
        } catch (Exception e) {
            // TODO Auto-generated catch block
            e.printStackTrace();
        }
		

	}

}
